# Environment Variables untuk Invisible Plagiarism Toolkit API
# Copy file ini ke .env dan isi dengan nilai yang sesuai

# Google Gemini AI API Key
# Dapatkan dari: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=true

# Database Configuration (optional untuk future expansion)
DATABASE_URL=sqlite:///./steganography.db

# Security Configuration
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Processing Configuration
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=uploads
OUTPUT_DIR=output

# Features Toggle
ENABLE_TURNITIN_REMOVAL=true
ENABLE_T5_PARAPHRASING=true
ENABLE_AI_VALIDATION=true
ENABLE_UNICODE_STEGANOGRAPHY=true
ENABLE_INVISIBLE_CHARS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/api.log